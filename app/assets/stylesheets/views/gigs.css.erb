.section_gigs #main{
	width:100%;
	/*background:red;*/
}

.section_gigs #main #primary_content{
	width:100%;
	padding:0;
}

.section_gigs header .container{
	background-image: none;
	padding-bottom: 55px;
}

.section_gigs #main .event-header{
}

.event-header{
	background:#D0122D;
}

.event-info{
	padding:40px;
	-moz-box-sizing:border;
	box-sizing:border-box;
	width:50%;
	color:white;
}

.event-info h1{
	color:white;
}

.event-image{
	float:left;
	width:50%;
}

.event-image img{
	display: block;
	width:100%;
}

.event-description{
	background:white;
	padding:30px;
	color:#D0122D;
}

.event-main-description{
	margin-bottom: 60px;
}

.event-description p{
	font-size: 18px;
	line-height: 1.4;
}

.event-info a{
	color:#61514D;
}

.col-left{
	width:60%;
	margin-right: 5%;
	float:left;
}

.col-right{
	float:left;
	margin-left:5%;
	width:30%;
}

#challenges{
	overflow: hidden;
}

table{
	width:100%;
}

table td{
	width:50%;
}
.gig-photo{
	background-position:center;
	background-size:cover;
}