.section_gigs #main{
	width:100%;
	/*background:red;*/
}

.section_gigs #main #primary_content{
	width:100%;
	padding:0;
}

.section_gigs header .container{
	background-image: none;
	padding-bottom: 55px;
}

.section_gigs #main .event-header{
}

.event-header{
	overflow: hidden;
}

.event-info{
	padding:20px;
	-moz-box-sizing:border;
	box-sizing:border-box;
	float:right;
	width:50%;
	color:white;
	background:#D0122D;
}

.event-info h1{
	color:white;
}

.event-image{
	float:left;
	width:50%;
	position:relative;
}

.event-image img{
	display: block;
	width:100%;
	position: absolute;
}

.event-description{
	background:white;
	padding:60px 0;
	color:#D0122D;
}

.event-description p{
	font-size: 18px;
	line-height: 1.4;
}

.event-info a{
	color:#61514D;
}